<div style="display: flex; justify-content: space-between;">
  <h1 style="justify-content: right">Entries</h1>
  <%= link_to "New entry", new_member_entry_path(member.id), class: "btn", style: "padding: 15px 15px; color:blue; border-color: blue" %>
</div>

<table class="table table-hover", style="text-align: left;">
  <thead>
  <tr>
    <th style="width: 15%;">Member code</th>
    <th style="width: 15%;">Book</th>
    <th style="width: 15%;">Start date</th>
    <th style="width: 15%;">Due date</th>
    <th style="width: 15%;">Return date</th>
    <th style="width: 15%;">Fine amount</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <div id="entries">
    <% if entries.present? %>
      <% entries.each do |entry| %>
        <tr>
          <td><%= entry.member.code %></td>
          <td><%= entry.book.title %></td>
          <td><%= entry.acquisition_date %></td>
          <td><%= entry.due_date %><i class="fa fa-plus" aria-hidden="true"></i></td>
          <td>
            <% if entry.return_date.present? %>
              <%= entry.return_date %>
            <% else %>
              <%= link_to "Update Return Date", update_return_date_member_entry_path(member.id, entry.id), method: :patch, alt: "Update Return Date" %>
            <% end %>
          </td>
          <td><%= entry.fine_amount %></td>
          <td style="display: flex;justify-content: space-around;">
            <%= link_to edit_member_entry_path(member.id, entry) do %>
              <i class="fa fa-edit" style="font-size: 22px;"></i>
            <% end %>
            <%= link_to member_entry_path(member.id) do%>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <p> No entries available </p>
    <% end %>
  </div>
  </tbody>
</table>
